@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="map"></div>
<div id="SearchGroup" class="container-fluid">
    <div class="row">
        <div class="col-xs-12">
            <div class="input-group">
                <div class="input-group-btn">
                    <button id="cboTipoPesquisa" type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                        <span id="TipoSelecionado" class="hidden-sm hidden-xs">Buscar Por</span>
                        <span class="caret" />
                    </button>
                    <ul id="TipoPesquisa" class="dropdown-menu pull-left">
                        <li><a id="linhaTipo" href="#">Linha</a></li>
                        <li><a id="paradaTipo" href="#">Parada</a></li>
                    </ul>
                </div>
                <input id="ValorPesquisa" type="search" class="form-control" placeholder="Buscar" />
                <span id="btnVoice" class="input-group-addon" status="">
                    <i class="fa fa-fw fa-microphone"></i>
                </span>
                <span class="input-group-btn">
                    <button id="btnPesquisar" class="btn btn-primary btn-flat" type="button">
                        <span class="glyphicon glyphicon-search"></span>
                        <span class="hidden-sm hidden-xs">&nbsp;Buscar</span>
                    </button>
                </span>
            </div>
        </div>
    </div>
</div>
