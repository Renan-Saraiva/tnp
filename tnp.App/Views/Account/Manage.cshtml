@model tnp.Data.Models.LocalPasswordModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>TNP | Alteração</title>
    <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>
    @Styles.Render("~/Content/bootstrapcss")
    @Styles.Render("~/Content/tnp/Account")
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body class="register-page">
    <div class="register-box">
        <div class="register-logo">
            <a href="/Dashboard/Index"><b>Tô no</b> Ponto</a>
        </div>
        <div class="register-box-body">
            <p class="text-center"><strong>@ViewBag.StatusMessage</strong>
                @if (ViewBag.NoChangePassword != null)
                {
                    <br />
                    <strong class="text-red">@ViewBag.NoChangePassword</strong>
                }
                else if (ViewBag.NotCanCreate != null)
                {
                    <br />
                    <strong class="text-red">@ViewBag.NotCanCreate</strong>
                }
            </p>
            @if (ViewBag.HasLocalPassword)
            {
                @Html.Partial("_ChangePasswordPartial")
            }
            else
            {
                @Html.Partial("_SetPasswordPartial")
            } 
            <div class="social-auth-links text-center">
                <p>- Adicionar um login externo -</p>
                @Html.Action("ExternalLoginsList", new { ReturnUrl = ViewBag.ReturnUrl })
                @Html.Action("RemoveExternalLogins")
            </div>
        </div><!-- /.form-box -->
    </div>
    <!-- /.register-box -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/icheck")
    <script type="text/javascript">
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' // optional
            });
        });
    </script>
</body>
</html>