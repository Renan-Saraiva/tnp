@model ICollection<AuthenticationClientData>
@if (Model.Count > 0)
{
        using (Html.BeginForm("ExternalLogin", "Account", new { ReturnUrl = ViewBag.ReturnUrl }))
        {
            @Html.AntiForgeryToken()
            foreach (AuthenticationClientData p in Model)
            {
                switch (p.AuthenticationClient.ProviderName)
                {
                    case "facebook":
                        <button type="submit" name="provider" value="@p.AuthenticationClient.ProviderName" class="btn btn-block btn-social btn-facebook btn-flat">
                            <i class="fa fa-facebook"></i> Entrar usando uma conta do Facebook
                        </button>
                        break;
                    case "google":
                        <button type="submit" name="provider" value="@p.AuthenticationClient.ProviderName" class="btn btn-block btn-social btn-google-plus btn-flat hidden">
                            <i class="fa fa-google-plus"></i> Entrar usando uma conta do Google+
                        </button>
                        break;
                }
            }
        }
}
